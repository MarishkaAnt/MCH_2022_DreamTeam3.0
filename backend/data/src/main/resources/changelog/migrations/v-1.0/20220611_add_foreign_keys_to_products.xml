<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="sokolovmono@gmail.com" id="20220611-add_foreign_keys_to_users">
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="companies"
                                 baseTableSchemaName="mosprom"
                                 constraintName="fk_company_product"
                                 referencedColumnNames="id"
                                 referencedTableName="products"
                                 referencedTableSchemaName="mosprom"
                                 validate="true"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="products"
                                      baseTableSchemaName="mosprom"
                                      constraintName="fk_company_product"/>
        </rollback>
    </changeSet>

</databaseChangeLog>